# VECTR Configuration - Managed by Ansible
VECTR_HOSTNAME={{ ludus_vectr_hostname }}
VECTR_PORT={{ ludus_vectr_port }}

# Set caddy cert profile (usercert, internal)
VECTR_CERTPROFILE={{ ludus_vectr_certprofile }}

# Defaults to warn, debug useful for development
# Supported log levels are: DEBUG, INFO, WARN, ERROR, FATAL
VECTR_CONTAINER_LOG_LEVEL={{ ludus_vectr_container_log_level }}

# Encrypted data like passwords to integrate with external systems (like TAXII) use this key
VECTR_DATA_KEY={{ ludus_vectr_data_key }}

# JWT signing (JWS) and encryption (JWE) keys
# Do not use the same value for both signing and encryption!
JWS_KEY={{ ludus_vectr_jws_key }}
JWE_KEY={{ ludus_vectr_jwe_key }}

# This sets the name of your project. Will show up in the name of your containers.
COMPOSE_PROJECT_NAME={{ ludus_vectr_compose_project_name }}

# This is where the mongodb mounts.
VECTR_DATA_DIR={{ ludus_vectr_data_dir }}

# Redis password
REDIS_PASSWORD={{ ludus_vectr_redis_password }}

# PostgreSQL configuration
POSTGRES_PASSWORD={{ ludus_vectr_postgres_password }}
POSTGRES_USER={{ ludus_vectr_postgres_user }}
POSTGRES_DB={{ ludus_vectr_postgres_db }}